<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 滑动的页面 -->

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

    <!-- 装点的容器 -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" >

        <LinearLayout
            android:id="@+id/gudie_point_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>

        <View
            android:id="@+id/guide_point_selected"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/point_selected" >
        </View>
    </RelativeLayout>

    <Button
        android:id="@+id/guide_btn_start"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/guide_btn_selector"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:textColor="@color/guide_btn_text_color_selector"
        android:layout_marginBottom="60dp"
        android:text="开始体验" />

</RelativeLayout>